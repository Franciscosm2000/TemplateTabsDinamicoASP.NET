@using System.Web.Optimization
@using WebHelpers.Mvc5.Enum
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            @ViewBag.Title@: -
        }
        AdminLTE
    </title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <link href="~/Content/fonts/line-awesome/css/line-awesome-font-awesome.css" rel="stylesheet" />
    <link href="~/Content/fonts/line-awesome/css/line-awesome.css" rel="stylesheet" />
    <link href="~/Content/js/plugins/jquery.scrolling/jquery.scrolling-tabs.css" rel="stylesheet" />
    <link href="~/Content/js/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    @Styles.Render("~/Bundles/css")
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/font-awesome-line-awesome/css/all.min.css">

    <script src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/plugins/jquery-ui-1.13.2/jquery-ui.min.js"></script>
    <script src="~/Content/js/plugins/jquery.scrolling/jquery.scrolling-tabs.min.js"></script>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_Header")
        @Html.Partial("_Sidebar")


        <div class="content-wrapper">
            <div class="content">
                @RenderBody()
                <!-- Nav tabs -->
                <div class="contenedorTablist">
                    <ul class="nav nav-tabs list" role="tablist" id="tabNodos"></ul>
                </div>
                <!-- Tab panes -->
                <div class="tab-content" id="tabContenedor">

                </div>
            </div>


            @Html.Partial("_ControlSidebar")
        </div>
    </div>

    <script src="@RouteJs.RouteJsHandler.HandlerUrl"></script>
    <script src="@EnumHandler.HandlerUrl"></script>
    <script src="~/Content/js/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/Plantilla.js"></script>
    @Scripts.Render("~/Bundles/js")
    @RenderSection("ViewSpecificJavascript", required: false)

    <script>
            var baseUrl = '@Url.Content("~")';
            function fnLoadingGeneral(content) {
                window.swal({
                    title: "",
                    text: "Espere...",
                    imageUrl: baseUrl + "Content/img/tenor.gif",
                    showConfirmButton: false,
                    allowOutsideClick: false,
                    targetContainer: content
                });
            }
    </script>
</body>
</html>